{
    "manifest_version": 3,
    "name": "Senior Activity Monitor",
    "version": "1.0",
    "description": "Monitors senior's online activity",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "webNavigation",
        "notifications",
        "downloads"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }],
    "icons": {
        "32": "image/icon_32.png",
        "64": "image/icon_64.png",
        "128": "image/icon_128.png"
    }
}